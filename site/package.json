{
	"name": "site",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"wasm-once": "wasm-pack build --dev  ../runtime --target no-modules --out-dir ../site/static/.wasm-runtime --no-default-features --features wasm",
		"wasm-release": "wasm-pack build  ../runtime --target no-modules --out-dir ../site/static/.wasm-runtime --no-default-features --features wasm",
		"wasm": "find ../runtime/ -name '*.rs' | entr pnpm wasm-once",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-top-level-await": "^1.3.1",
		"vite-plugin-wasm": "^3.2.2"
	},
	"type": "module",
	"dependencies": {
		"@replit/codemirror-vim": "^6.0.14",
		"bits-ui": "^0.6.3",
		"clsx": "^2.0.0",
		"codemirror": "^6.0.1",
		"lucide-svelte": "^0.288.0",
		"rehype-stringify": "^10.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.0.0",
		"svelte-codemirror-editor": "^1.1.0",
		"tailwind-merge": "^1.14.0",
		"tailwind-variants": "^0.1.16",
		"thememirror": "^2.0.1",
		"ts-unwrap": "^2.0.0",
		"unified": "^11.0.3"
	}
}
